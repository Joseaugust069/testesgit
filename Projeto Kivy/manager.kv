<Gerenciador>:
    Menu:
        name:'menu'
    Janelas:
        name: 'tarefas'

    Assistencia:
        name:'assistencia'

<Menu>
    BoxLayout:
        orientation:'vertical'
        padding:200
        spacing:50
        canvas:
            Color:
                rgba:0,0,0,1
            Rectangle:
                size:self.size
                pos:self.pos
                source:'moldura.png'
        Botao:
            text:'Tarefas'
            on_release:app.root.current = 'tarefas'
            cor:0.1,0.1,0.1,1
        Botao:
            text:'Assistente'
            on_release:app.root.current = 'assistencia'
            cor:0.1,0.1,0.1,1
        Botao:
            text:'Sair'
            on_release:root.confirmacao()


<Janelas>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Janelas'
                    on_release:app.root.current = 'menu'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()

        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
        BoxLayout:
            size_hint_y:None
            height:60
            TextInput:
                id:texto
            Button:
                text:'+'
                size_hint_x:None
                width:60
                on_release:root.addWidget()


<Assistencia>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Janelas'
                    on_release:app.root.current = 'menu'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()

        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height








<Tarefa>:
    size_hint_y:None
    height:200
    Label:
        id:label
        font_size:30
    Button:
        text:'X'
        size_hint_x:None
        width:60
        on_release:app.root.get_screen('tarefas').removeWidget(root)

<Assistentes>:
    size_hint_y:None
    height:200
    Label:
        id:label
        font_size:30
    Button:
        text:'X'
        size_hint_x:None
        width:60
        on_release:app.root.get_screen('assistencia').removeWidget(root)
